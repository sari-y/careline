<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="row">
        <div class="col-12 mt-5 mb-5">
          <h2>会社情報＜入力＞</h2>
        </div>
      </div>


    <%= form_with do |f| %>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :campany_name, "会社名" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :campany_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :post_code, "郵便番号" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :post_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :address, "住所" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :establishment_date, "設立日" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :establishment_date %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :capital, "資本金" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :capital %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :phone_number, "電話番号" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :phone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :email, "メールアドレス" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :business_content, "事業内容" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :business_content %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :name, "代表取締役" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-4 mb-5">
          <div class="actions">
            <%= f.submit "登録" %>
          </div>
        </div>
      </div>


    <% end %>
    </div>
  </div>
</div>