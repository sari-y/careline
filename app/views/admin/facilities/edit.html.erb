<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="row">
        <div class="col-12 mt-5 mb-5">
          <h2>施設情報編集</h2>
        </div>
      </div>


    <%= form_with(model: @facility, url: admin_facility_path, method: :patch) do |f| %>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :name, "施設名" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :post_code, "郵便番号" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :post_code %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :address, "住所" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :open, "開業日" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :open %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :rent, "家賃" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :rent %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :utility, "光熱水費" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :utility %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :food, "食材料費" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :food %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :daily, "日用品費" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :daily %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="field">
            <%= f.label :explanation, "施設説明" %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <%= f.text_field :explanation %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-4 mb-5">
          <div class="actions">
            <%= f.submit "更新", class: "button"; %>
          </div>
        </div>
      </div>


    <% end %>
    </div>
  </div>
</div>