<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="row">
        <div class="col-12 mt-5 mb-5">
          <h2>施設情報一覧</h2>
        </div>
      </div>
      <div class="col-12 mb-4 d-flex flex-row-reverse">
        <%= link_to "追加", new_admin_facility_path(@facility), class: "button" %>
      </div>

      <% @facilities.each do |facility| %>
        <%= link_to admin_facility_path(facility) do %>
          <h5> ◆ <%= facility.name %></h5>
        <% end %><br>
      <% end %>
    </div>
  </div>
</div>